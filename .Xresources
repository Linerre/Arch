! special
*foreground: #d8d8d8
!URxvt.depth: 32
*background: #181818
*cursorColor: #0da8e0

! black
*color0: #282828
*color8: #282c34

! red
*.color1: #ab4642
*.color9: #e06c75

! green
*.color2:  #a1b56c
*.color10: #98c379

! yellow
*color3:  #f7ca88
*color11: #e5c07b

! blue
*color4:  #7cafc2
*color12: #61afef

! Magenta
*color5:  #ba8baf
*color13: #c678dd

! cyan
*color6:  #86c1b9
*color14: #56b6c2

! white
*color7:  #d8d8d8
*color15: #f8f8f8



! Font Settings
URxvt.font: xft:InputMono Light:size=9:style=Light,Regular
!URxvt.boldFont: xft:Input Mono:style=Bold Italic
!URxvt.italicfont: xft:InputMono Light:style=Light Italic,Italic

!URxvt.font: xft:Hack:size=9:style=Regular
!URxvt.boldFont: xft:Hack:style=Bold
!URxvt.ItalicFont: xft:Have:style=Bold Italic
! -1 works fine with Hack
!URxvt.letterSpace: -1
URxvt.letterSpace: 0 



! X system
Xft.dpi: 96
Xft.antialias: true

